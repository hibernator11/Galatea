'use strict';

/**
 * Module dependencies.
 */
var mongoose = require('mongoose'),
  Schema = mongoose.Schema;

/**
 * Book Schema
 */
var BookSchema = new Schema({
  created: {
    type: Date,
    default: Date.now
  },
  title: {
    type: String,
    default: '',
    trim: true,
    required: 'El campo t√≠tulo no puede ser nulo'
  },
  comments: {
    type: String,
    default: '',
    trim: true
  },
  uuid: {
    type: String,
    default: '',
    trim: true,
  },
  slug: {
    type: String,
    default: '',
    trim: true,
  },
  reproduction: {
    type: String,
    default: '',
    trim: true,
  },
  identifierWork: {
    type: String,
    default: '',
    trim: true,
    /*required: 'El campo identificador de la obra no puede ser nulo'*/
  },
  user: {
    type: Schema.ObjectId,
    ref: 'User'
  }
});

mongoose.model('Book', BookSchema);
